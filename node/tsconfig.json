{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["../typings/**/*", "./**/*"],
  "exclude": ["node_modules", "./dist/**/*"]
}
